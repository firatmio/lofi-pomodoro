{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lofi-pomodoro",
  "version": "0.1.0",
  "identifier": "com.firatmio.lofi-pomodoro",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "lofi-pomodoro",
        "decorations": false,
        "width": 800,
        "height": 500,
        "minHeight": 500,
        "minWidth": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
